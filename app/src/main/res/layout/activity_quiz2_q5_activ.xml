<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nsf.nsf_nue_project.quiz2.Quiz2_q5_activ"
    android:background="@drawable/quiz_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/questionText"
        android:textSize="16sp"
        android:text="Relate A and B"
        android:textColor="#261c4a"
        android:layout_below="@+id/back_btn"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_btn"
        android:src="@drawable/ic_action_accept"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_btn"
        android:src="@drawable/ic_action_back"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/next_btn"
        android:layout_toStartOf="@+id/next_btn"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/colAOption1"
        android:textSize="16sp"
        android:text="1. Geckos walk on the wall"
        android:textColor="#261c4a"
        android:layout_below="@+id/colATitle"
        android:layout_toStartOf="@+id/questionText"
        android:layout_alignParentBottom="false"
        android:layout_marginBottom="16sp"
        android:layout_marginLeft="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/colATitle"
        android:textSize="16sp"
        android:text="A"
        android:textColor="#261c4a"
        android:textStyle="bold"
        android:layout_below="@+id/questionText"
        android:layout_alignLeft="@+id/colAOption1"
        android:layout_alignStart="@+id/colAOption1"
        android:layout_marginLeft="74dp"
        android:layout_marginStart="74dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/colBOption1"
        android:textSize="16sp"
        android:text="Surface tension"
        android:textColor="#261c4a"
        android:layout_below="@+id/colBTitle"
        android:layout_toLeftOf="@+id/next_btn"
        android:layout_toStartOf="@+id/next_btn"
        android:layout_marginBottom="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/colBTitle"
        android:textSize="16sp"
        android:text="B"
        android:textColor="#261c4a"
        android:textStyle="bold"
        android:layout_above="@+id/colAOption1"
        android:layout_alignLeft="@+id/back_btn"
        android:layout_alignStart="@+id/back_btn" />

    <Spinner
        android:id="@+id/drop1"
        android:inputType="number"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:spinnerMode="dropdown"
        android:layout_alignBottom="@+id/colBOption1"
        android:layout_toLeftOf="@+id/colBOption1"
        android:layout_toStartOf="@+id/colBOption1" />

    <Spinner
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:inputType="number"
        android:id="@+id/drop2"
        android:spinnerMode="dropdown"
        android:layout_alignBottom="@+id/colBOption2"
        android:layout_toLeftOf="@+id/colBOption2"
        android:layout_toStartOf="@+id/colBOption2" />

    <Spinner
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:inputType="number"
        android:id="@+id/drop3"
        android:spinnerMode="dropdown"
        android:layout_alignBottom="@+id/colBOption3"
        android:layout_toLeftOf="@+id/colBOption3"
        android:layout_toStartOf="@+id/colBOption3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/colAOption2"
        android:textSize="16sp"
        android:text="2. Water striders walk\n on the water"
        android:textColor="#261c4a"
        android:layout_below="@+id/colAOption1"
        android:layout_alignLeft="@+id/colAOption1"
        android:layout_alignStart="@+id/colAOption1"
        android:layout_marginBottom="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/colAOption3"
        android:textSize="16sp"
        android:text="3. Plastic combs attract \npaper pieces "
        android:textColor="#261c4a"
        android:layout_below="@+id/colAOption2"
        android:layout_alignLeft="@+id/colAOption2"
        android:layout_alignStart="@+id/colAOption2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/colBOption2"
        android:textSize="16sp"
        android:text="Van der Waals force"
        android:textColor="#261c4a"
        android:layout_below="@+id/colBOption1"
        android:layout_alignLeft="@+id/colBOption1"
        android:layout_alignStart="@+id/colBOption1"
        android:layout_marginBottom="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/colBOption3"
        android:textSize="16sp"
        android:text="Electrostatic force "
        android:textColor="#261c4a"
        android:layout_alignStart="@+id/colBOption2"
        android:layout_alignLeft="@+id/colBOption2"
        android:layout_below="@+id/colBOption2" />

</RelativeLayout>

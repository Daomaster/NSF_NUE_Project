<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nsf.nsf_nue_project.quiz2.Quiz2_q2_activ"
    android:background="#ffffffff">

    <TextView android:text="2 - Which picture shows the structure of a gecko&apos;s foot? " android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question2Q2Text"
        android:textSize="35sp"
        android:layout_marginTop="38dp"
        android:textColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quiz2Q2OpA"
        android:button="@drawable/quiz2question2opa"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="40dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quiz2Q2OpB"
        android:button="@drawable/quiz2question2opb"
        android:layout_alignTop="@+id/quiz2Q2OpA"
        android:layout_toRightOf="@+id/quiz2Q2OpA"
        android:layout_toEndOf="@+id/quiz2Q2OpA"
        android:layout_marginLeft="10dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quiz2Q2OpC"
        android:button="@drawable/quiz2question2opc"
        android:layout_alignTop="@+id/quiz2Q2OpB"
        android:layout_toRightOf="@+id/quiz2Q2OpB"
        android:layout_toEndOf="@+id/quiz2Q2OpB"
        android:layout_marginLeft="10dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/quiz2question2opd"
        android:id="@+id/quiz2Q2OpD"
        android:layout_alignTop="@+id/quiz2Q2OpC"
        android:layout_toRightOf="@+id/quiz2Q2OpC"
        android:layout_toEndOf="@+id/quiz2Q2OpC"
        android:layout_marginLeft="10dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_btn"
        android:src="@drawable/ic_action_accept"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_btn"
        android:src="@drawable/ic_action_back"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/next_btn"
        android:layout_toStartOf="@+id/next_btn"
        android:clickable="true" />

</RelativeLayout>

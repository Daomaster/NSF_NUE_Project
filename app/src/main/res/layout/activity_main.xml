<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:theme="@android:style/Theme.Holo.Light"
    android:background="@drawable/background">


    <Button
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:text="Chapter1: \nIntroduction"
        android:textSize="35sp"
        android:id="@+id/intro_btn"
        android:textAllCaps="false"
        android:clickable="true"
        android:background="@drawable/newbutton"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="97dp"
        android:typeface="normal" />

    <Button
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:text="Chapter2: \nScaling Law"
        android:textSize="35sp"
        android:id="@+id/scalin_law_btn"
        android:textAllCaps="false"
        android:background="@drawable/newbutton"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/intro_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:text="Chapter3: \nDevice"
        android:textSize="35sp"
        android:textAllCaps="false"
        android:id="@+id/device_btn"
        android:background="@drawable/newbutton"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/application_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:text="Chapter3: \nApplication"
        android:textSize="35sp"
        android:textAllCaps="false"
        android:id="@+id/application_btn"
        android:background="@drawable/newbutton"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/scalin_law_btn"
        android:layout_alignStart="@+id/scalin_law_btn"
        android:layout_marginBottom="28dp" />

</RelativeLayout>

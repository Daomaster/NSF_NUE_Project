<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:theme="@android:style/Theme.Holo.Light"
    android:background="@drawable/background">


    <Button
        android:layout_width="400dp"
        android:layout_height="85dp"
        android:text="Chapter1: \nIntroduction"
        android:textSize="25sp"
        android:id="@+id/intro_btn"
        android:textAllCaps="false"
        android:clickable="true"
        android:background="@drawable/newbutton"
        android:textColor="#ffffff"
        android:typeface="normal"
        android:layout_marginTop="78dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_marginStart="618dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="85dp"
        android:text="Chapter2: \nScaling Law"
        android:textSize="25sp"
        android:id="@+id/scalin_law_btn"
        android:textAllCaps="false"
        android:background="@drawable/newbutton"
        android:textColor="#ffffff"
        android:layout_below="@+id/intro_btn"
        android:layout_alignLeft="@+id/intro_btn"
        android:layout_alignStart="@+id/intro_btn"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="85dp"
        android:text="Chapter3: \nDevice"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:id="@+id/device_btn"
        android:background="@drawable/newbutton"
        android:textColor="#ffffff"
        android:layout_alignLeft="@+id/scalin_law_btn"
        android:layout_alignStart="@+id/scalin_law_btn"
        android:layout_below="@+id/scalin_law_btn"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="85dp"
        android:text="Chapter4: \nApplication"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:id="@+id/application_btn"
        android:background="@drawable/newbutton"
        android:textColor="#ffffff"
        android:layout_below="@+id/device_btn"
        android:layout_alignLeft="@+id/device_btn"
        android:layout_alignStart="@+id/device_btn"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/front_page"
        android:layout_toLeftOf="@+id/scalin_law_btn"
        android:layout_toStartOf="@+id/scalin_law_btn"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="93dp"
        android:layout_marginTop="65dp" />

</RelativeLayout>

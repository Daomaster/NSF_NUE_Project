<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Question 1"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Question 2"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/radioGroup2"
        android:layout_alignStart="@+id/radioGroup2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Question 3"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/radioGroup2"
        android:layout_toEndOf="@+id/radioGroup2" />

    <RadioGroup
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:text="@string/option_a"
            android:id="@+id/radioButton" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_b"
            android:id="@+id/radioButton2"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_c"
            android:id="@+id/radioButton3"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_d"
            android:id="@+id/radioButton4"
            android:layout_marginTop="10dp" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_marginStart="66dp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/radioGroup"
        android:layout_toEndOf="@+id/radioGroup"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/radioGroup2">

        <RadioButton
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:text="@string/option_a"
            android:id="@+id/radioButton5" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_b"
            android:id="@+id/radioButton6"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_c"
            android:id="@+id/radioButton7"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_d"
            android:id="@+id/radioButton8"
            android:layout_marginTop="10dp" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:id="@+id/radioGroup6"
        android:layout_alignTop="@+id/radioGroup2"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3">

        <RadioButton
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:text="@string/option_a"
            android:id="@+id/radioButton9" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_b"
            android:id="@+id/radioButton10"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_c"
            android:id="@+id/radioButton11"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_d"
            android:id="@+id/radioButton12"
            android:layout_marginTop="10dp" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Question 4"
        android:id="@+id/textView4"
        android:layout_below="@+id/radioGroup"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <RadioGroup
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:id="@+id/radioGroup3"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp">

        <RadioButton
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:text="@string/option_a"
            android:id="@+id/radioButton13" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_b"
            android:id="@+id/radioButton14"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_c"
            android:id="@+id/radioButton15"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_d"
            android:id="@+id/radioButton16"
            android:layout_marginTop="10dp" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Question 5"
        android:id="@+id/textView5"
        android:layout_below="@+id/radioGroup2"
        android:layout_alignLeft="@+id/radioGroup2"
        android:layout_alignStart="@+id/radioGroup2" />

    <RadioGroup
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:id="@+id/radioGroup4"
        android:layout_alignTop="@+id/radioGroup3"
        android:layout_alignLeft="@+id/radioGroup2"
        android:layout_alignStart="@+id/radioGroup2">

        <RadioButton
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:text="@string/option_a"
            android:id="@+id/radioButton17" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_b"
            android:id="@+id/radioButton18"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_c"
            android:id="@+id/radioButton19"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_d"
            android:id="@+id/radioButton20"
            android:layout_marginTop="10dp" />
    </RadioGroup>

    <Button
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:text="Submit"
        android:id="@+id/button13"
        android:textSize="30dp"
        android:layout_alignTop="@+id/radioGroup4"
        android:layout_toRightOf="@+id/radioGroup4"
        android:layout_toEndOf="@+id/radioGroup4" />

    <Button
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:text="Return"
        android:id="@+id/button14"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/radioGroup4"
        android:layout_toRightOf="@+id/radioGroup4"
        android:layout_toEndOf="@+id/radioGroup4" />

</RelativeLayout>
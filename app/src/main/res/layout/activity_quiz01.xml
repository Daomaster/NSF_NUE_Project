<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/quiz_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Question 1"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Question 2"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/radioGroup2"
        android:layout_alignStart="@+id/radioGroup2" />

    <RadioGroup
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:text="@string/option_a"
            android:textColor="@color/hint_foreground_material_light"
            android:id="@+id/radioButton" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_b"
            android:id="@+id/radioButton2"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_c"
            android:id="@+id/radioButton3"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_d"
            android:id="@+id/radioButton4"
            android:layout_marginTop="10dp" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_marginStart="66dp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/radioGroup"
        android:layout_toEndOf="@+id/radioGroup"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/radioGroup2">

        <RadioButton
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:text="@string/option_a"
            android:id="@+id/radioButton5" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_b"
            android:id="@+id/radioButton6"
            android:textColor="@color/hint_foreground_material_light"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_c"
            android:id="@+id/radioButton7"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_d"
            android:id="@+id/radioButton8"
            android:layout_marginTop="10dp" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Question 3"
        android:id="@+id/textView3"
        android:layout_below="@+id/radioGroup"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <RadioGroup
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:id="@+id/radioGroup3"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp">

        <RadioButton
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:text="@string/option_a"
            android:id="@+id/radioButton13"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_b"
            android:id="@+id/radioButton14"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_c"
            android:textColor="@color/hint_foreground_material_light"
            android:id="@+id/radioButton15"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_d"
            android:id="@+id/radioButton16"
            android:layout_marginTop="10dp" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Question 4"
        android:id="@+id/textView4"
        android:layout_below="@+id/radioGroup2"
        android:layout_alignLeft="@+id/radioGroup2"
        android:layout_alignStart="@+id/radioGroup2" />

    <RadioGroup
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:id="@+id/radioGroup4"
        android:layout_alignTop="@+id/radioGroup3"
        android:layout_alignLeft="@+id/radioGroup2"
        android:layout_alignStart="@+id/radioGroup2">

        <RadioButton
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:text="@string/option_a"
            android:id="@+id/radioButton17" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_b"
            android:id="@+id/radioButton18"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_c"
            android:textColor="@color/hint_foreground_material_light"
            android:id="@+id/radioButton19"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_d"
            android:id="@+id/radioButton20"
            android:layout_marginTop="10dp" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Question 5"
        android:id="@+id/textView5"
        android:layout_below="@+id/radioGroup2"
        android:layout_alignLeft="@+id/radioGroup5"
        android:layout_alignStart="@+id/radioGroup5" />

    <RadioGroup
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:id="@+id/radioGroup5"
        android:layout_alignTop="@+id/radioGroup4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RadioButton
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:text="@string/option_a"
            android:textColor="@color/hint_foreground_material_light"
            android:id="@+id/radioButton21" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_b"
            android:id="@+id/radioButton22"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_c"
            android:id="@+id/radioButton23"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_d"
            android:id="@+id/radioButton24"
            android:layout_marginTop="10dp" />
    </RadioGroup>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menu_btn"
        android:src="@drawable/menu_btn"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/radioGroup5"
        android:layout_alignEnd="@+id/radioGroup5"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="59dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/send_btn"
        android:src="@drawable/send_btn"
        android:layout_alignTop="@+id/menu_btn"
        android:layout_toLeftOf="@+id/menu_btn"
        android:layout_toStartOf="@+id/menu_btn"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="submit"
        android:id="@+id/submitText"
        android:layout_below="@+id/send_btn"
        android:layout_alignRight="@+id/send_btn"
        android:layout_alignEnd="@+id/send_btn"
        android:layout_marginRight="-3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="return"
        android:id="@+id/returnText"
        android:layout_below="@+id/menu_btn"
        android:layout_alignLeft="@+id/menu_btn"
        android:layout_alignStart="@+id/menu_btn"
        android:layout_marginLeft="-2.5dp" />

</RelativeLayout>
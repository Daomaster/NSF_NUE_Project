<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff">

    <Button
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="What is Nanotechnology"
        android:textAllCaps="false"
        android:id="@+id/nanotech_btn"
        android:layout_marginTop="37dp"
        android:padding="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:textSize="20sp"
        android:background="@drawable/newbutton"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="Macrosize &amp; Microsize"
        android:textAllCaps="false"
        android:id="@+id/macro_micro_btn"
        android:layout_marginRight="52dp"
        android:textSize="20sp"
        android:background="@drawable/newbutton"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/nanotech_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="77dp" />

    <Button
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="Why Nanoscale"
        android:textAllCaps="false"
        android:id="@+id/nanoscale_btn"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/nanotech_btn"
        android:layout_alignLeft="@+id/nanotech_btn"
        android:layout_alignStart="@+id/nanotech_btn"
        android:textSize="20sp"
        android:background="@drawable/newbutton"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="History"
        android:textAllCaps="false"
        android:id="@+id/history_btn"
        android:layout_below="@+id/macro_micro_btn"
        android:layout_alignLeft="@+id/macro_micro_btn"
        android:layout_alignStart="@+id/macro_micro_btn"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:background="@drawable/newbutton"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="450dp"
        android:layout_height="80dp"
        android:text="Quiz 1"
        android:textAllCaps="false"
        android:id="@+id/quiz1_btn"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/nanoscale_btn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/quizbutton"
        android:textColor="#1e6cd2" />

</RelativeLayout>
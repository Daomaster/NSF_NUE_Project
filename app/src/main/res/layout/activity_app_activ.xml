<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:theme="@android:style/Theme.Holo.Light"
    android:background="#ffffff">

    <Button
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="Ask Nature"
        android:id="@+id/ask_btn"
        android:textAllCaps="false"
        android:layout_marginTop="37dp"
        android:padding="20dp"
        android:layout_below="@+id/homeButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:textSize="20sp"
        android:background="@drawable/newbutton"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="Energy Generation &amp; Storage"
        android:textAllCaps="false"
        android:id="@+id/enrg_gen_btn"
        android:layout_below="@+id/homeButton"
        android:layout_alignRight="@+id/homeButton"
        android:layout_alignEnd="@+id/homeButton"
        android:layout_marginRight="52dp"
        android:layout_marginTop="37dp"
        android:textSize="20sp"
        android:background="@drawable/newbutton"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="Self-Cleaning Fabric &amp; Cosmetics "
        android:textAllCaps="false"
        android:id="@+id/self_cln_btn"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/ask_btn"
        android:layout_alignLeft="@+id/ask_btn"
        android:layout_alignStart="@+id/ask_btn"
        android:textSize="20sp"
        android:background="@drawable/newbutton"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="Drug Delivery"
        android:textAllCaps="false"
        android:id="@+id/drug_del_btn"
        android:layout_below="@+id/enrg_gen_btn"
        android:layout_alignLeft="@+id/enrg_gen_btn"
        android:layout_alignStart="@+id/enrg_gen_btn"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:background="@drawable/newbutton"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="450dp"
        android:layout_height="80dp"
        android:text="Quiz 4"
        android:textAllCaps="false"
        android:id="@+id/quiz4_btn"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/self_cln_btn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/quizbutton"
        android:textColor="#1e6cd2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homeButton"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp"
        android:src="@drawable/home"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffff"
        android:layout_marginTop="10dp" />
</RelativeLayout>
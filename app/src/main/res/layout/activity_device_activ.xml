<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:theme="@android:style/Theme.Holo.Light"
    android:background="#ffffff">

    <Button
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="3.1 SEM"
        android:id="@+id/sem_btn"
        android:layout_marginTop="37dp"
        android:padding="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:textSize="20sp"
        android:background="@drawable/newbutton"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="3.2 AFM"
        android:id="@+id/afm_btn"
        android:layout_marginRight="52dp"
        android:textSize="20dp"
        android:background="@drawable/newbutton"
        android:textColor="#ffffff"
        android:layout_above="@+id/quiz3_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="57dp"
        android:layout_marginTop="37dp" />

    <Button
        android:layout_width="450dp"
        android:layout_height="80dp"
        android:text="Quiz 3"
        android:id="@+id/quiz3_btn"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sem_btn"
        android:background="@drawable/quizbutton"
        android:textColor="#1e6cd2" />

</RelativeLayout>